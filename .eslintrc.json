{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": "airbnb-base",
  "parser": "@babel/eslint-parser",
  "plugins": ["promise"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "key-spacing": ["error", {
      "align": "colon",
      "afterColon": true,
      "beforeColon": true
    }]
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["#utils", "./src/utils"],
          ["#constants", "./src/constants"],
          ["#services", "./src/services"]
        ]
      },
      "extensions": [".js"]
    }
  }
}
